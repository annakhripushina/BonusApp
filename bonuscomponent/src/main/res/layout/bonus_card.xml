<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@drawable/ic_rectangle_764">

    <ImageView
        android:id="@+id/buttonDetail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_group_3112"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/currentQuantity"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center_vertical"
        android:lineSpacingExtra="-1sp"
        android:text="@string/currentQuantity"
        android:textAppearance="@style/textCurrentQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateBurning"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="@string/dataBurning"
        android:textAppearance="@style/textBurning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/burningImage"
        android:layout_width="13dp"
        android:layout_height="17dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/ic_path_241_1"
        app:layout_constraintStart_toEndOf="@id/dateBurning"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/forBurningQuantity"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="@string/forBurningQuantity"
        android:textAppearance="@style/textBurning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/burningImage" />

</androidx.constraintlayout.widget.ConstraintLayout>